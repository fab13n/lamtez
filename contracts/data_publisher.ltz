type data = string
type data_update = Sig: sig * Data: data
type operation = option (sig * string)

@key  :: key
@data :: data
@fee  :: tez

\(parameter :: operation) :: data:
( parameter ?
| None: ( self-amount >= @fee ?
        | False: fail
        | True:  @data
        )
| Some signed_data:
  ( crypto-check @key signed_data.Sig signed_data.Data ?
  | False: fail
  | True:
    @data <- signed_string.Data;
    signed_string.Data
  )
)