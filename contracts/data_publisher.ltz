type data = string
type operation = option (sig * data)

@key  :: key
@data :: data
@fee  :: tez

\(parameter :: operation):
( case parameter
| None: (if self-amount >= @fee: @data | else: fail)
| Some signed_data:
  let sig = signed_data.0; let data = signed_data.1;
  (if crypto-check @key sig data: @data <- data; data | else: fail))